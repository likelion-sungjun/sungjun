<div class="container">
<form action="/home/write" method="POST" style="margin-top:40px;">
  <div class="form-group">
    <label for="exampleInputEmail1">제목</label>
    <input type="text" name="title"  class="form-control" id="exampleInputEmail1" placeholder="제목">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">글내용</label>
    <textarea type="text" name="content" row="6" class="form-control" id="comment" placeholder="글내용"></textarea>
  </div>
  
  <button type="submit" class="btn btn-default">글쓰기</button>
</form>
<hr>

<% @posts.each do |p| %>
	<div class="well">
	<span style="font-weight:bold;"><%= p.title %></span><br>
	<%= p.content %>
	<hr>
	
    	<% p.replies.each do |r| %>
    	<p><%= r.content %></p>
    	<% end %>
    	
	
	  <form style="margin-top:40px;" action="/home/reply_write" method="POST">
	    <input type="hidden" value="<%= p.id %>" name="id_of_post">
      <textarea class="form-control" row="6" id="comment" name="content"></textarea>
      <button type="submit" class="btn btn-default">댓글</button>
    </form>
	</div>
<% end %>

</div>